<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ItemDetailActivity" >

    <ImageView
        android:id="@+id/productIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/recommendationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/productIcon"
        android:layout_toRightOf="@+id/productIcon"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/brandTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/recommendationTv"
        android:layout_alignRight="@+id/recommendationTv"
        android:layout_below="@+id/recommendationTv"
        android:text="TextView" />

    <TextView
        android:id="@+id/modelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/brandTv"
        android:layout_alignRight="@+id/brandTv"
        android:layout_below="@+id/brandTv"
        android:text="TextView" />

    <TableLayout
        android:id="@+id/commentsTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/productIcon"
        android:layout_alignRight="@+id/modelTv"
        android:layout_below="@+id/productIcon"
        android:layout_marginTop="42dp" >
    </TableLayout>

    <Button
        android:id="@+id/wordCloudButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/productIcon"
        android:layout_marginBottom="21dp"
        android:layout_toRightOf="@+id/productIcon"
        android:text="@string/word_cloud_text" />

</RelativeLayout>
